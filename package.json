{
  "name": "@femessage/create-nuxt-app",
  "version": "1.0.0",
  "description": "Create a Deepexi App in seconds.",
  "bin": {
    "create-nuxt-app": "bin/cli.js"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "files": [
    "bin/",
    "generator/",
    "template/",
    "*.js"
  ],
  "repository": {
    "url": "git+https://github.com/FEmessage/create-nuxt-app.git",
    "type": "git"
  },
  "scripts": {
    "lint": "eslint ./",
    "test": "ava test --verbose",
    "test:snapshot": "ava test --verbose --update-snapshots",
    "generate": "node bin/cli.js -a -o release",
    "zip": "node bin/zip.js",
    "build": "node bin/deploy/build.js",
    "release": "gren release --override"
  },
  "dependencies": {
    "cac": "^6.5.2",
    "cross-spawn": "^6.0.5",
    "glob": "^7.1.3",
    "sao": "^1.6.1",
    "validate-npm-package-name": "^3.0.0"
  },
  "devDependencies": {
    "@femessage/github-release-notes": "^0.19.0",
    "@semantic-release/github": "semantic-release/github",
    "archiver": "^3.0.0",
    "ava": "^2.4.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-jest": "^22.20.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-vue": "^5.2.3",
    "husky": "1.3.1",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.24",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.vue": [
      "eslint --fix",
      "stylelint --fix",
      "git add"
    ],
    "*.less": [
      "stylelint --fix",
      "git add"
    ],
    "*.@(md|json)": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": false
            }
          ]
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "release/*.zip"
            }
          ]
        }
      ]
    ]
  },
  "authors": [
    "Egoist <0x142857@gmail.com>",
    "Nuxt team <team@nuxtjs.org>",
    "Clark Du <clark.duxin@gmail.com>",
    "Han <xsytby1112@gmail.com>"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "gren": "@femessage/grenrc"
}
